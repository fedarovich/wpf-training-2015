<Window x:Class="DependencyProperties.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dependency Properties" Height="350" Width="525">
    <StackPanel>
        <TextBox Text="{Binding Minimum, RelativeSource={RelativeSource AncestorType=Window}, ValidatesOnExceptions=True}" Margin="5" />
        <TextBox Text="{Binding Maximum, RelativeSource={RelativeSource AncestorType=Window}, ValidatesOnExceptions=True}" Margin="5" />
    </StackPanel>
</Window>
