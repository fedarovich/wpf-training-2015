<Window x:Class="FocusDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Focus" Height="350" Width="525">
    <UniformGrid Rows="2">
        <StackPanel>
            <TextBox Name="TextBox11" Margin="5"/>
            <TextBox Name="TextBox12" Margin="5" />
            <TextBox Name="TextBox13" Margin="5" />
        </StackPanel>
        <GroupBox Header="Focus Scope" FocusManager.IsFocusScope="True" >
            <StackPanel>
                <Button Content="Cut" Margin="5" Command="Cut" />
                <Button Content="Copy" Margin="5" Command="Copy" />
                <Button Content="Paste" Margin="5" Command="Paste" />
            </StackPanel>
        </GroupBox>
        
    </UniformGrid>
</Window>
