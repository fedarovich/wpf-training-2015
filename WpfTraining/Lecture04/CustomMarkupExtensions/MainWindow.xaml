<Window x:Class="CustomMarkupExtensions.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:cme="clr-namespace:CustomMarkupExtensions"
        Title="MainWindow" Height="350" Width="525">
    <TabControl>
        <TabItem Header="Static Localization">
            <StackPanel TextElement.FontSize="24">
                <TextBlock Text="{cme:Loc StaticString}" Margin="10"/>
                <TextBlock Text="{cme:Loc StaticString, Culture=de-DE}" Margin="10"/>
            </StackPanel>
        </TabItem>
        
        <TabItem Header="Dynamic Localization">
            <StackPanel>
                <ComboBox ItemsSource="{x:Static cme:LocalizationManager.Cultures}"
                          SelectedItem="{Binding Path=(cme:LocalizationManager.CurrentUICulture), Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Name, Mode=OneTime}" />
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </StackPanel>
        </TabItem>
    </TabControl>
    
</Window>
