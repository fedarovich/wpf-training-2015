<UserControl x:Class="CustomMarkupExtensions.Views.StaticLocalization"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:cme="clr-namespace:CustomMarkupExtensions"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <StackPanel TextElement.FontSize="24">
            <TextBlock Text="{cme:Loc StaticString}" Margin="10"/>
            <TextBlock Text="{cme:Loc StaticString, Culture=de-DE}" Margin="10"/>
        </StackPanel>
    </Grid>
</UserControl>
