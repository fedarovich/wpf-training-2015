<UserControl x:Class="DemoControlsApp.Views.CenterCanvasDemo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:demo="urn:demo-controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <demo:RenderedGrid UseLayoutRounding="True" />
        <demo:CenterCanvas>
            <Ellipse Width="100" Height="50" Fill="#44FF0000"  
                demo:CenterCanvas.CenterX="100"
                demo:CenterCanvas.CenterY="100" />
        </demo:CenterCanvas>
    </Grid>
</UserControl>
